
<%layout('layouts/boilerplate')%> 

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3 mb-3">
    <h1>EDIT PLANT</h1>
    <form action="/plants/<%=plant._id%>?_method=PUT" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="title" class="form-label">Plant-Name</label>
          <input type="text" class="form-control" id="title" name="plant[title]" value="<%=plant.title%>" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3">
          <label for="price" class="form-label">Price</label>
          <input type="number" class="form-control" id="price" name="plant[price]" value="<%=plant.price%>" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Image-Url</label>
          <input type="text" class="form-control" id="image" name="plant[image]" value="<%=plant.image%>" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea type="text" class="form-control" id="description" name="plant[description]"  required><%=plant.description%></textarea>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>

