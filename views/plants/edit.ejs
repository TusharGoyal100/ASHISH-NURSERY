
<%layout('layouts/boilerplate')%> 

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3 mb-3">
    <h1>EDIT PLANT</h1>
    <form action="/plants/<%=plant._id%>?_method=PUT" method="post">
        <div class="mb-3">
          <label for="title" class="form-label">Plant-Name</label>
          <input type="text" class="form-control" id="title" name="plant[title]">
        </div>
        <div class="mb-3">
          <label for="price" class="form-label">Price</label>
          <input type="number" class="form-control" id="price" name="plant[price]">
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Image-Url</label>
          <input type="text" class="form-control" id="image" name="plant[image]">
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea type="text" class="form-control" id="description" name="plant[description]"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>