<%layout('layouts/boilerplate')%> 

<div class="row">
  <div class="col-6">
<div class="card mb-3 " style="width: 30rem;">
    <img src="<%=plant.image%>" class="card-img-top img-fluid" alt="...">
    <div class="card-body">
      <h5 class="card-title"><%=plant.title%> </h5>
      <p class="card-text"><%=plant.description%> </p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">$<%=plant.price%></li>
    </ul>
    <div class="card-body">
      <a href="/plants/<%=plant._id%>/edit" class="card-link btn btn-info">Edit</a>
      <form class="d-inline" action="/plants/<%=plant._id%>?_method=DELETE" method="post">
        <button class="btn btn-danger">Delete</button>
    </form>
    </div>
  </div>
</div>
  <div class="col-6">
    <h1>Leave a review</h1>
    <form action="/plants/<%=plant._id%>/reviews" method="post" class="mb-3 needs-validation" novalidate>
      <div class="mb-3">
        <label for="rating" class="form-label">Rating</label>
        <input type="number" class="form-control" id="rating" name="review[rating]" required>
        <div class="valid-feedback">Looks Good</div>
      </div>
      <div class="mb-3">
        <label for="body" class="form-label">Review</label>
        <textarea class="form-control" id="body" name="review[body]" rows="3" required></textarea>
        <div class="valid-feedback">Looks Good</div> 
      </div>
      <button class="btn btn-primary">Submit</button>
    </form>
</div>
  </div>




